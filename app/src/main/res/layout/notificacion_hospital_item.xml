<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mensaje -->
        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje de notificación"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital: Ejemplo"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paciente: Nombre Apellido"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvGrupoSanguineo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo Sanguíneo: O+"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Tipo de notificación -->
        <TextView
            android:id="@+id/tvTipoNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Alerta"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 2023-11-01T12:00:00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Botón Editar con ícono blanco y negro -->
            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Editar"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <!-- Botón Eliminar con ícono blanco y negro -->
            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Eliminar"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
