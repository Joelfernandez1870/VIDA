<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/titleNuevoGrupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:text="Nuevo Grupo"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo: Nombre del Grupo -->
    <EditText
        android:id="@+id/editTextNombreGrupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Grupo"
        android:inputType="text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleNuevoGrupo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo: Fecha de Creación -->
    <EditText
        android:id="@+id/editTextFechaCreacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Creación (YYYY-MM-DD)"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNombreGrupo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Crear Grupo -->
    <Button
        android:id="@+id/buttonCrearGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Grupo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTextFechaCreacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
