<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Mensaje del recordatorio -->
    <TextView
        android:id="@+id/mensajeRecordatorio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mensaje"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEliminarRecordatorio" />

    <!-- Botón de eliminar -->
    <ImageButton
        android:id="@+id/btnEliminarRecordatorio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Eliminar recordatorio"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha de envío -->
    <TextView
        android:id="@+id/fechaEnvio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de envío"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/mensajeRecordatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tipo de recordatorio -->
    <TextView
        android:id="@+id/tipoRecordatorio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/fechaEnvio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
