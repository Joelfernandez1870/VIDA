<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/titleEditarMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:text="Editar Mensaje"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre del Usuario -->
    <TextView
        android:id="@+id/textNombreUsuarioEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Usuario"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleEditarMensaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textFechaEditar"
        android:layout_marginTop="16dp" />

    <!-- Fecha actual -->
    <TextView
        android:id="@+id/textFechaEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Actual"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/textNombreUsuarioEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textNombreUsuarioEditar"
        android:layout_marginEnd="8dp" />

    <!-- Cuerpo del Mensaje -->
    <EditText
        android:id="@+id/inputCuerpoMensajeEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Modifica tu mensaje aquí..."
        android:inputType="textMultiLine"
        android:minHeight="150dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textNombreUsuarioEditar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón Modificar -->
    <Button
        android:id="@+id/btnModificarMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorPrimary"
        android:padding="16dp"
        android:text="Modificar Mensaje"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/inputCuerpoMensajeEditar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
