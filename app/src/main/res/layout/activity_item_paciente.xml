<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombrePaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Paciente:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Apellido -->
        <TextView
            android:id="@+id/TvApellidoPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido Paciente:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- DNI -->
        <TextView
            android:id="@+id/tvDniPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Grupo sanguíneo -->
        <TextView
            android:id="@+id/tvGrupoSanguineo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo Sanguíneo:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Fecha de nacimiento -->
        <TextView
            android:id="@+id/TvFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Ciudad -->
        <TextView
            android:id="@+id/tvCiudadPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- País -->
        <TextView
            android:id="@+id/TvPaisPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="País:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmailPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
