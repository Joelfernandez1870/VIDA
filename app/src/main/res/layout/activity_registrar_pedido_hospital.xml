<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/titleRegistrarDonacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:text="Pedido de Donación"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para el nombre del paciente -->
    <EditText
        android:id="@+id/inputNombrePaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Paciente"
        android:inputType="textPersonName"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleRegistrarDonacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para el tipo de sangre -->
    <EditText
        android:id="@+id/inputTipoSangre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo de Sangre"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputNombrePaciente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para el DNI del paciente -->
    <EditText
        android:id="@+id/inputDNIPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DNI del Paciente"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputTipoSangre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para la urgencia -->
    <Spinner
        android:id="@+id/spinnerUrgencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputDNIPaciente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para la fecha -->
    <EditText
        android:id="@+id/inputFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:inputType="date"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerUrgencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para la cantidad de donantes necesarios -->
    <EditText
        android:id="@+id/inputCantidadDonantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad de Donantes Necesarios"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón Registrar Pedido -->
    <Button
        android:id="@+id/btnRegistrarPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Pedido"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@id/inputCantidadDonantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
